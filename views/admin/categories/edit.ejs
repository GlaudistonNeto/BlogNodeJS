  <div class="card">
      <div class="card-header">
        <h2>Category Edit</h2>
      </div>
    <div class="card-body">
      <form action="/categories/update" method="POST">
        <p><input type="text" class="form-control" name="title" placeholder="Define category title" value="<%= category.title %>"></p>
