<%- include('../../partials/header.ejs') %>
<%- include('../../partials/navbar.ejs') %>
<div class="container">
  <div class="card-body">
    <h2>Users</h2>
    <a class="btn btn-success" href="/admin/users/create">Create new user</a>
  </div>
  <div class="card-footer">
    <table class="table">
      <thead>
        <tr>
          <th>ID</th>
          <th>Email</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach(user => { %>
          <tr>
            <td><%= user.id %></td>
            <td><%= user.email %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</div>
<%- include('../../partials/footer.ejs') %>
<script>
  function confirmDeletion(event, form){
    event.preventDefault();
    var decision = confirm("Do you really want it?");
    if(decision){
      form.submit();
    }
  }
</script>